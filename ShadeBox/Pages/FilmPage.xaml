<ui:Page
    x:Class="ShadeBox.Pages.FilmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="FilmPage"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    FontFamily="Segoe UI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Navigation Bar  -->
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" />
        </Grid>

        <!--  Search and Filter Bar  -->
        <Border
            Grid.Row="1"
            BorderThickness="1"
            CornerRadius="8"
            Effect="{DynamicResource DropShadowBorder}">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Height="46"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Name="HomeButton"
                            Grid.Column="0"
                            Height="34"
                            Margin="4"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Click="HomeButton_Click"
                            ToolTip="Ana Sayfa">
                            <ui:PathIcon
                                Width="14"
                                Height="14"
                                Data="{StaticResource HomeIconData}"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Button>
                        <ToggleButton
                            Name="FavoriteButton"
                            Grid.Column="1"
                            Width="Auto"
                            Height="34"
                            Margin="0,0,4,0"
                            BorderThickness="0"
                            Click="FavoriteButton_Click"
                            ToolTip="Favori Filmler"
                            ToolTipService.BetweenShowDelay="1">
                            <ToggleButton.Content>
                                <WrapPanel>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource FavoriteIconData}"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    <TextBlock
                                        Margin="4,0,0,0"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        Text="Favoriler" />
                                </WrapPanel>
                            </ToggleButton.Content>
                        </ToggleButton>
                        <ui:AutoSuggestBox
                            Name="SearchBox"
                            Grid.Column="2"
                            Margin="2,0,4,0"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            FontSize="14"
                            PlaceholderText="Film Ara.."
                            QuerySubmitted="SearchBox_QuerySubmitted"
                            SuggestionChosen="SearchBox_SuggestionChosen"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            TextChanged="SearchBox_TextChanged" />

                        <ComboBox
                            Name="CategoryComboBox"
                            Grid.Row="1"
                            Grid.Column="3"
                            Width="180"
                            Height="34"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderThickness="1"
                            SelectionChanged="CategoryComboBox_SelectionChanged" />

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="4"
                            Margin="0,4,0,4"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                Name="PreviousButton"
                                Width="50"
                                Height="34"
                                Margin="4,0,4,0"
                                BorderThickness="0"
                                Click="PreviousButton_Click">
                                <Button.Content>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource PreviousIconData}"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </Button.Content>
                            </Button>
                            <Border
                                Height="34"
                                Padding="4"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="Normal"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding CurrentPageText}"
                                    TextAlignment="Center" />
                            </Border>
                            <Button
                                Name="NextButton"
                                Width="50"
                                Height="34"
                                Margin="4,0,4,0"
                                BorderThickness="0"
                                Click="NextButton_Click">
                                <Button.Content>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource NextIconData}"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!--  Movies Grid  -->
        <ui:ScrollViewerEx
            Grid.Row="2"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ForceUseSmoothScroll="True"
            VerticalScrollBarVisibility="Hidden">
            <ItemsControl Name="MovieItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Width="160"
                            Margin="10"
                            Cursor="Hand"
                            MouseLeftButtonDown="MovieCard_Click"
                            RenderTransformOrigin="0.5,0.5"
                            Tag="{Binding Id}">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="transform" ScaleX="1" ScaleY="1" />
                            </Grid.RenderTransform>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Grid.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="transform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.05"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="transform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.05"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Grid.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="transform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="transform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Grid Height="240">
                                <!--  Movie Poster  -->
                                <Image
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{Binding PosterImage}"
                                    Stretch="UniformToFill" />

                                <!--  Gradient Overlay  -->
                                <Rectangle Height="240">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#00000000" />
                                            <GradientStop Offset="1.6" Color="#00000000" />
                                            <GradientStop Offset="1" Color="Black" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!--  Rating Badge with Star Icon  -->
                                <Border
                                    Width="Auto"
                                    Height="20"
                                    Margin="8"
                                    Padding="4,2,4,2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Background="#90000000"
                                    CornerRadius="4">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="13"
                                            FontWeight="Medium"
                                            Foreground="#CCFFFFFF"
                                            Text="{Binding ReleaseDate, StringFormat='{}{0:yyyy}'}"
                                            TextAlignment="Center" />
                                    </Grid>
                                </Border>

                                <StackPanel
                                    Margin="0,8,8,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">

                                    <Border
                                        Width="Auto"
                                        Height="20"
                                        Padding="4,2,8,2"
                                        Background="#90000000"
                                        CornerRadius="4">
                                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ui:PathIcon
                                                Width="13"
                                                Height="13"
                                                Data="{StaticResource StarIconData}"
                                                Foreground="#FFD700" />
                                            <TextBlock
                                                Margin="4,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="White"
                                                Text="{Binding VoteAverage}" />
                                        </WrapPanel>
                                    </Border>

                                </StackPanel>

                                <!--  Movie Info  -->
                                <StackPanel Margin="12,0,12,12" VerticalAlignment="Bottom">
                                    <TextBlock
                                        MaxHeight="48"
                                        Margin="0,0,0,4"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Opacity="0.9"
                                        Text="{Binding Title}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap" />

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#FFD700"
                                            Text="{Binding Category}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ui:ScrollViewerEx>
    </Grid>
</ui:Page>