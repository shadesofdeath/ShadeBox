<Window
    x:Class="ShadeBox.Pages.MovieDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Film Detayları"
    MinWidth="900"
    MinHeight="600"
    MaxWidth="900"
    MaxHeight="600"
    ui:TitleBar.MaximizeButtonAvailability="Collapsed"
    ui:WindowHelper.FixMaximizedWindow="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    BorderThickness="0"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <ui:ScrollViewerEx VerticalScrollBarVisibility="Hidden" ForceUseSmoothScroll="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Content  -->
            <Grid Grid.Row="0" Margin="20,20,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Poster  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,20,0"
                    VerticalAlignment="Top">
                    <StackPanel>
                        <Image
                            x:Name="PosterImage"
                            Width="200"
                            Height="300"
                            Stretch="UniformToFill" />
                        <Button
                            Margin="0,8,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Click="WatchButton_Click">
                            <Button.Content>
                                <WrapPanel>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource PlayIconData}" />
                                    <TextBlock Margin="6,0,0,0" Text="İzle" />
                                </WrapPanel>
                            </Button.Content>
                        </Button>
                        <Button
                            Margin="0,6,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Click="DownloadButton_Click">
                            <Button.Content>
                                <WrapPanel>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource DownloadIconData}" />
                                    <TextBlock Margin="6,0,0,0" Text="İndir" />
                                </WrapPanel>
                            </Button.Content>
                        </Button>
                        <Button
                            x:Name="FavoriteButton"
                            Margin="0,6,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Button.Content>
                                <WrapPanel>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource FavoriteIconData}" />
                                    <TextBlock
                                        x:Name="FavoriteText"
                                        Margin="6,0,0,0"
                                        Text="Favorilere Ekle" />
                                </WrapPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Border>

                <!--  Movie Details  -->
                <StackPanel Grid.Column="1">
                    <!--  Title and Original Title  -->
                    <TextBlock
                        x:Name="TitleBlock"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        TextWrapping="Wrap" />

                    <TextBlock
                        x:Name="OriginalTitleBlock"
                        Margin="0,5,0,15"
                        FontSize="18"
                        Foreground="#CCCCCC" />

                    <!--  Rating and Year  -->
                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <Border
                            Padding="8,4"
                            Background="#FFD700"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <ui:PathIcon
                                    Width="16"
                                    Height="16"
                                    Data="{StaticResource StarIconData}"
                                    Foreground="Black" />
                                <TextBlock
                                    x:Name="RatingBlock"
                                    Margin="5,0,0,0"
                                    FontWeight="Bold"
                                    Foreground="Black" />
                            </StackPanel>
                        </Border>

                        <TextBlock
                            x:Name="YearBlock"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#CCCCCC" />

                        <TextBlock
                            x:Name="RuntimeBlock"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#CCCCCC" />
                    </StackPanel>

                    <!--  Genres  -->
                    <WrapPanel x:Name="GenresPanel" Margin="0,0,0,15">
                        <WrapPanel.Resources>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#444444" />
                                <Setter Property="CornerRadius" Value="0" />
                                <Setter Property="Padding" Value="8,4" />
                                <Setter Property="Margin" Value="0,0,8,8" />
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="14" />
                            </Style>
                        </WrapPanel.Resources>
                    </WrapPanel>

                    <!--  Overview  -->
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Özet" />

                    <TextBlock
                        x:Name="OverviewBlock"
                        FontSize="15"
                        LineHeight="24"
                        TextWrapping="Wrap" />


                </StackPanel>

            </Grid>
            <StackPanel Grid.Row="1" Margin="20">
                <!--  Cast  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Oyuncular" />

                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="CastPanel" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="Width" Value="120" />
                                    <Setter Property="Height" Value="120" />
                                    <Setter Property="Margin" Value="0,0,0,4" />
                                    <Setter Property="Background" Value="#333333" />
                                    <Setter Property="CornerRadius" Value="60" />
                                    <!--  Tam daire için width/2 değeri  -->
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </StackPanel>
        </Grid>
    </ui:ScrollViewerEx>

</Window>