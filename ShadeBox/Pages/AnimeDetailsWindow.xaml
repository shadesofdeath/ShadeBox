<Window
    x:Class="ShadeBox.Pages.AnimesDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Anime Detayları"
    MinWidth="1000"
    MinHeight="600"
    MaxWidth="1000"
    MaxHeight="600"
    ui:TitleBar.MaximizeButtonAvailability="Collapsed"
    ui:WindowHelper.FixMaximizedWindow="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    BorderThickness="0"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <ui:ScrollViewerEx ForceUseSmoothScroll="True" VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Content  -->
            <Grid Grid.Row="0" Margin="20,20,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Poster  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,20,0"
                    VerticalAlignment="Top">
                    <StackPanel>
                        <Image
                            x:Name="PosterImage"
                            Width="200"
                            Height="300"
                            MaxWidth="200"
                            MaxHeight="300"
                            Stretch="Uniform" />
                        <Button
                            x:Name="FavoriteButton"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Button.Content>
                                <WrapPanel>
                                    <ui:PathIcon
                                        Width="14"
                                        Height="14"
                                        Data="{StaticResource FavoriteIconData}" />
                                    <TextBlock
                                        x:Name="FavoriteText"
                                        Margin="6,0,0,0"
                                        Text="Favorilere Ekle" />
                                </WrapPanel>
                            </Button.Content>
                        </Button>

                        <!--  Season Selection  -->
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock
                                Margin="4,6,0,0"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Sezonlar" />
                            <ListView
                                x:Name="SeasonsListView"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                SelectionChanged="SeasonsListView_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="0,5,0,5"
                                            FontSize="16"
                                            Text="{Binding name}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </StackPanel>
                </Border>


                <!--  Movie Details  -->
                <StackPanel Grid.Column="1">
                    <!--  Title and Original Title  -->
                    <TextBlock
                        x:Name="TitleBlock"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="OriginalTitleBlock"
                        Margin="0,5,0,15"
                        FontSize="18"
                        Foreground="#CCCCCC" />

                    <!--  Rating and Year  -->
                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <Border
                            Padding="8,4"
                            Background="#FFD700"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <ui:PathIcon
                                    Width="16"
                                    Height="16"
                                    Data="{StaticResource StarIconData}"
                                    Foreground="Black" />
                                <TextBlock
                                    x:Name="RatingBlock"
                                    Margin="5,0,0,0"
                                    FontWeight="Bold"
                                    Foreground="Black" />
                            </StackPanel>
                        </Border>

                        <TextBlock
                            x:Name="YearBlock"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#CCCCCC" />
                    </StackPanel>
                    <!--  Genres  -->
                    <WrapPanel x:Name="GenresPanel" Margin="0,0,0,15">
                        <WrapPanel.Resources>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#444444" />
                                <Setter Property="CornerRadius" Value="0" />
                                <Setter Property="Padding" Value="8,4" />
                                <Setter Property="Margin" Value="0,0,8,8" />
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="14" />
                            </Style>
                        </WrapPanel.Resources>
                    </WrapPanel>

                    <!--  Overview  -->
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Özet" />
                    <TextBlock
                        x:Name="OverviewBlock"
                        FontSize="15"
                        LineHeight="24"
                        TextWrapping="Wrap" />
                    <!--  Seasons and Episodes  -->
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Bölümler" />
                    <ItemsControl x:Name="EpisodesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,5,0,5"
                                    Padding="10"
                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="5"
                                    Effect="{DynamicResource DropShadowBorder}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            x:Name="PosterImage"
                                            Grid.Column="0"
                                            Width="120"
                                            Height="80"
                                            Margin="0,0,10,0"
                                            Source="{Binding still_path}"
                                            Stretch="UniformToFill" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                Margin="0,0,0,2"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="{Binding name}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="White"
                                                LineHeight="18"
                                                Text="{Binding overview}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                Width="34"
                                                Height="34"
                                                Margin="5,0,5,0"
                                                Click="EpisodeWatchButton_Click"
                                                Tag="{Binding videos}">
                                                <Button.Content>
                                                    <ui:PathIcon Data="{StaticResource PlayIconData}" />
                                                </Button.Content>
                                            </Button>
                                            <Button
                                                Width="34"
                                                Height="34"
                                                Margin="5,0,5,0"
                                                Click="EpisodeDownloadButton_Click"
                                                Tag="{Binding videos}">
                                                <Button.Content>
                                                    <ui:PathIcon Data="{StaticResource DownloadIconData}" />
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Grid>
    </ui:ScrollViewerEx>
</Window>